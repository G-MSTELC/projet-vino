{# templates/security/forgot_password.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié - Vino{% endblock %}

{% block body %}
    <section class="forgot-password-section">
        <h2>Mot de passe oublié</h2>
        <p>Veuillez saisir votre adresse email pour réinitialiser votre mot de passe.</p>

        {# Formulaire de récupération de mot de passe oublié #}
        <form method="post">
            <div class="form-group">
                <label for="inputEmail">Adresse email</label>
                <input type="email" id="inputEmail" name="email" class="form-control" required>
            </div>
            <button type="submit" class="btn btn-primary">Réinitialiser le mot de passe</button>
        </form>
    </section>
{% endblock %}
