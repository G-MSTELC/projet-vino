{% if pagination.getTotalItemCount() > 0 %}
    <nav aria-label="Pagination">
        <ul class="pagination">
            {% if pagination.getCurrentPageNumber() != 1 %}
                <li class="page-item"><a class="page-link" href="{{ path(app.request.attributes.get('_route'), app.request.query.all|merge({'page': 1})) }}">Première</a></li>
            {% endif %}

            {% for page in pagination.getPages() %}
                {% if page == pagination.getCurrentPageNumber() %}
                    <li class="page-item active"><span class="page-link">{{ page }}</span></li>
                {% else %}
                    <li class="page-item"><a class="page-link" href="{{ path(app.request.attributes.get('_route'), app.request.query.all|merge({'page': page})) }}">{{ page }}</a></li>
                {% endif %}
            {% endfor %}

            {% if pagination.getCurrentPageNumber() != pagination.getLastPageNumber() %}
                <li class="page-item"><a class="page-link" href="{{ path(app.request.attributes.get('_route'), app.request.query.all|merge({'page': pagination.getLastPageNumber()})) }}">Dernière</a></li>
            {% endif %}
        </ul>
    </nav>
{% endif %}
